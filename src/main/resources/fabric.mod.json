{
	"schemaVersion": 1,
	"id": "ghostpings",
	"version": "${version}",
	"name": "GhostPings",
	"description": "Simple mod for pinging blocks and entities to other players",
	"authors": [
		"Catchet", "GhostPixels"
	],
	"contact": {
		"homepage": "https://github.com/Catchet/GhostPings",
		"sources": "https://github.com/Catchet/GhostPings"
	},
	"license": "CC0-1.0",
	"icon": "assets/ghostpings/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"me.ghostpixels.ghostpings.GhostPings"
		],
		"client": [
			"me.ghostpixels.ghostpings.GhostPingsClient"
		]
	},
	"mixins": [
		"ghostpings.mixins.json",
		{
			"config": "ghostpings.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.17.3",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}